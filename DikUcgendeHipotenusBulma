
package dikucgendehipotenusbulma;

import java.util.Scanner;

/**
 *
 * @author ferha
 */
public class DikUcgendeHipotenusBulma {

    /*Dik ÃœÃ§gende HipotenÃ¼s Bulan Program
     Java ile kullanÄ±cÄ±dan dik kenarlarÄ±nÄ±n uzunluÄŸunu alan ve hipotenÃ¼sÃ¼ hesaplayan programÄ± yazÄ±n.

     Ã–dev
     ÃœÃ§ kenar uzunluÄŸunu kullanÄ±cÄ±dan aldÄ±ÄŸÄ±nÄ±z Ã¼Ã§genin alanÄ±nÄ± hesaplayan programÄ± yazÄ±nÄ±z.

     FormÃ¼l
     ÃœÃ§ğ‘”ğ‘’ğ‘›ğ‘–ğ‘› Ã§ğ‘’ğ‘£ğ‘Ÿğ‘’ğ‘ ğ‘– = 2ğ‘¢

     ğ‘¢ = (a+b+c) / 2

     Alan * Alan = ğ‘¢ * (ğ‘¢ âˆ’ ğ‘)* (ğ‘¢ âˆ’ ğ‘) * (ğ‘¢ âˆ’ ğ‘)
     */
    public static void main(String[] args) {
        
        int dikAkenar;
        int dikBkenar;
        double hipotenus;
        double u;
        
        Scanner sc = new Scanner(System.in);
        System.out.print("LÃ¼tfen birinci dikkerarÄ± giriniz: ");
        dikAkenar = sc.nextInt();
        System.out.print("LÃ¼tfen ikinci dikkerarÄ± giriniz: ");
        dikBkenar = sc.nextInt();
      
        hipotenus = Math.sqrt((dikAkenar*dikAkenar)+(dikBkenar*dikBkenar));
        u = (dikAkenar+dikBkenar+hipotenus)/2;
        
        System.out.println("Dik Ã¼Ã§genin hipotenÃ¼sÃ¼: "+ hipotenus);
        System.out.println("Dik Ã¼Ã§genin alanÄ±: "+ Math.sqrt(u*(u-dikAkenar)*(u-dikBkenar)*(u-hipotenus)));
        
       
        
        
    }
    
}
